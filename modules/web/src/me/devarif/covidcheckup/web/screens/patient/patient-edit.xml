<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://patientEdit.caption"
        focusComponent="form"
        messagesPack="me.devarif.covidcheckup.web.screens.patient">
    <data>
        <instance id="patientDc"
                  class="me.devarif.covidcheckup.entity.Patient">
            <view extends="_local"/>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="patientDc">
            <column width="350px">
                <textField id="firstNameField" property="firstName"/>
                <textField id="lastNameField" property="lastName"/>
                <dateField id="birthDayField" property="birthDay"/>
                <lookupField id="genderField" property="gender"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
